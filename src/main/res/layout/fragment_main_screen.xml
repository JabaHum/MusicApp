<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentMainScreenFrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--    Will contain the Recycler View which will use to display a list of songs-->
    <!--    It will also contain the 'bottom bar' which will get displayed when the song is playing when -->
    <!--    we're on our main screen fragment-->
    <RelativeLayout
        android:id="@+id/visibleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contentMainRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
        <!--        Creating the bottom bar-->
        <RelativeLayout
            android:id="@+id/hiddenBottomBarMainScreen"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:visibility="invisible">

            <ImageButton
                android:id="@+id/playPauseButtonMainScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="31dp"
                android:background="@drawable/pause_icon" />

            <ImageView
                android:id="@+id/defaultMusicMainScreen"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:background="@drawable/now_playing_bar_eq_image"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <TextView
                android:id="@+id/nowPlayingMainScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/defaultMusicMainScreen"
                android:text="Now Playing"
                android:textColor="bdbdbd" />

            <TextView
                android:id="@+id/songTitleMainScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nowPlayingMainScreen"
                android:layout_alignStart="@id/nowPlayingMainScreen"
                android:layout_alignLeft="@id/nowPlayingMainScreen"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxWidth="160dp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="..."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/noSongsMainScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="You don't have any songs at the moment"
            android:textColor="#000" />
    </RelativeLayout>
</RelativeLayout>