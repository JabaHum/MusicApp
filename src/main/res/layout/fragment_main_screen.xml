<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contentMainScreenFrag" >
<!--    Will contain the Recycler View which will use to display a list of songs-->
<!--    It will also contain the 'bottom bar' which will get displayed when the song is playing when -->
<!--    we're on our main screen fragment-->
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/visibleLayout">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contentMainRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
<!--        Creating the bottom bar-->
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/hiddenBarMainScreen"
    android:layout_alignParentBottom="true"
    android:background="@color/colorPrimary"
    android:layout_height="100dp">
<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:id="@+id/playPauseButtonMainScreen"
    android:layout_centerVertical="true" android:layout_alignParentRight="true"
    android:background="@drawable/pause_icon"
    android:layout_marginRight="31dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/defaultMusicMainScreen" android:layout_alignParentLeft="true"
        android:layout_marginLeft="13dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
     android:background="@drawable/now_playing_bar_eq_image"   android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="wrap_content" android:text="Now Playing"
        android:textColor="bdbdbd"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/defaultMusicMainScreen"
        android:id="@+id/nowPlayingMainScreen"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/songTitleMainScreen"
        android:layout_below="@id/nowPlayingMainScreen" android:maxLines="1"
        android:maxWidth="160dp" android:singleLine="true"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@id/nowPlayingMainScreen"
        android:layout_alignStart="@id/nowPlayingMainScreen"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:text="..."
        android:ellipsize="end"/>
</RelativeLayout>
    </RelativeLayout>
</RelativeLayout>